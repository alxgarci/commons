<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.BusquedaVecinosFragment"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="116dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lVecinosBusqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/myInputTextMain">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etVecinosBusqueda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="-8dp"
            android:background="@color/colorTransparent"
            android:hint="@string/hint_busqueda"
            android:fontFamily="@font/montserrat"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.chip.ChipGroup
            android:layout_marginTop="30dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/chGroupBusqueda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacingVertical="-4dp"
            app:chipSpacingHorizontal="6dp"
            app:singleLine="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/ch1"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="1km"
                android:textAlignment="center"
                style="@style/Widget.App.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/ch3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="3km"
                android:textAlignment="center"
                style="@style/Widget.App.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/ch5"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="5km"
                android:textAlignment="center"
                style="@style/Widget.App.Chip"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/ch10"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="10km"
                android:textAlignment="center"
                style="@style/Widget.App.Chip"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFragBusVecsearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/btn_fragment_vecinos_busqueda"
        style="@style/ButtonOrange"/>


</LinearLayout>