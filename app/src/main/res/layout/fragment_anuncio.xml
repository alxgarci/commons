<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.AnuncioFragment">

    <ImageButton
        android:id="@+id/backAnuncio"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_arrow_back_2"
        android:background="@color/colorTransparent"/>

    <LinearLayout
        android:id="@+id/llAnuncioFrag"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvAnuncioFrag"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:text="Anuncio"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/lEditAnuncioFrag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="-16dp"
            style="@style/myInputTextMain">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAnuncioFrag"
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-8dp"
                android:background="@color/colorTransparent"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorPrimary" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAnuncioFragPublicar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:text="Publicar"
        android:textSize="22sp"
        style="@style/ButtonOrange"/>

</LinearLayout>