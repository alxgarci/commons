<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PerfilFragment"
    android:orientation="vertical"
    android:layout_marginBottom="116dp"
    android:id="@+id/llPerfil">

                <ImageView
                    android:id="@+id/im_fragment_perfil"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    />



        <TextView
            android:id="@+id/tvFragmentNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/tv_fragment_nombre"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/llPerfilUbicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="26dp">
                <ImageView
                    android:id="@+id/icUbicacionPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"/>
                <TextView
                    android:id="@+id/tvFragmentUbica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="@string/tv_fragment_ubicacion"/>
        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mcCardViewPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="20dp"
            app:strokeWidth="1dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/stroke_cardview_vecino">
                <LinearLayout
                    android:id="@+id/llPerfilDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">
                        <TextView
                            android:id="@+id/tvFragmentDes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_fragment_desc"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvFragmentDescripcion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tv_fragment_descripcion"/>
                </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


</LinearLayout>