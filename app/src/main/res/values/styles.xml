<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textInputStyle">@style/myInputTextLogin</item>
    </style>
    <style name="ButtonOrange" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/statelist</item>
        <item name="font">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonGreen" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/statelist_green</item>
        <item name="font">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="myInputTextLogin" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/colorTransparent</item>
        <item name="hintTextColor">@color/colorTransparentWhite</item>
        <item name="boxStrokeColor">@color/statelist_it_login</item>
        <item name="android:textColorHint">@color/colorTransparentWhite</item>
        <item name="endIconTint">@color/colorTransparentWhite</item>
    </style>
    <style name="bottomAppbar" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="labelVisibilityMode">selected</item>
    </style>
    <style name="FabMain" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>



</resources>